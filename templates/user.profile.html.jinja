<body>
 <h1>IntFeed <img src="/static/spooky-removebg-preview.png" hight = "50" width= "40" ></h1>


<br>


<div class="mx-auto p-2 border-dark rounded" style="width: 700px;">

<h2>{{user.display_name}}</h2>

<img src= "/media/users/{{user['photo']}}" height = "80" width= "80" class=" rounded-circle object-fit-cover rounded">
<p>{{user.bio}}</p>
 <p>{{user['birthday'].strftime("%b %-m, %Y ")}}</p>

</div>
<h2>Posts</h2>

<div>
        {% for post in posts%}

        <div  class="border border-dark p-2 mt-5 rounded mx-auto p-2" style="width: 800px;">


            <p>{{post['username']}} (@{{post['display_name']}})</p>
            <p>{{post['timestamp'].strftime("%b %-m, %Y ")}}</p>
         
            <p>{{post['caption']}}</p>
            <img src= "/media/post/{{post['post_image']}}"  height = "200" width= "200" class="object-fit-cover rounded"> 
            
        </div>

        {% endfor%}

</div>