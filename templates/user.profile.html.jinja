<div class="mx-auto border border-dark-subtle border-3 rounded p-3" style="width: 700px;"> 

<div class="container text-center">
  <div class="row align-items-start">
    <div class="col-1">
    
    </div>
    <div class="col-8">
        <h2>{{user.display_name}}</h2>

        
    </div>

  </div>
</div>

<div class="container text-center">
  <div class="row align-items-center">
    <div class="col-1">
     <img src= "/media/users/{{user['photo']}}" height = "150" width= "150" class=" rounded-circle object-fit-cover rounded">
    </div>
    <div class="col-11">

     <span class="inline-block fas fa-certificate fa-lg text-blue-500 
                               relative mr-6 text-xl transform -translate-y-2" aria-hidden="true">
            <i class="fas fa-check text-white text-xs absolute inset-x-0
                               ml-1 mt-px"></i>
          </span>

          <!-- follow button -->
          <a href="#" class="bg-blue-500 px-2 py-1 
                        text-white font-semibold text-sm rounded block text-center 
                        sm:inline-block block">Follow</a>
        

<div class="hidden md:flex space-x-8 mb-4">
          
            <span class="font-semibold">136</span>
            posts |
       
            <span class="font-semibold">40.5k</span>
            followers |
         
            <span class="font-semibold">302</span>
            following
          
</div>
<p>Bio: {{user.bio}}</p>
 <p>Birthday: {{user['birthday'].strftime("%b %-m, %Y ")}}</p>
    </div>
  </div>
</div>




</div>
<h2>Posts</h2>

<div>
            {% for post in posts%}

        <div  class="border border-dark p-2 mt-5 rounded mx-auto p-2" style="width: 600px;">


            <h5>{{post['username'] | escape }} {{post['display_name'] | escape }}</h5>
            <p>{{post['timestamp'].strftime("%b %-m, %Y %-I:%M %p")}}</p>
         
           
            <div class="text-center">
            <img src= "/media/post/{{post['post_image']}}"  hight = "400" width= "400" class="object-fit-cover rounded"> 
            </div>
            <br>
            <p>{{post['caption'] | escape }}</p>
        </div>

        {% endfor%}

</div>


